
<% if calendars.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3">
          <h2>Available Calendars</h2>
        </th>
      </tr>
      <tr>
        <th>
          Name
        </th>
        <th>
          Events
        </th>
        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'calendars/table_row', collection: calendars, as: :calendar %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3">
          <%= link_to new_company_calendar_path(current_company), class: 'btn btn-success' do %>
            <%= fa_icon('plus') %> Add a Calendar
          <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
<% else %>
  <div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
      <h2>Uh oh... No calendars available</h2>
      <%= link_to 'Create a Calendar', new_company_calendar_path(current_company), class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
